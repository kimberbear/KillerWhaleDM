ACTOR FXBase : Actor 
{
	+NOINTERACTION
	+NOGRAVITY
	+NOTONAUTOMAP
	+CLIENTSIDEONLY
	+NONETID
	+THRUACTORS
	+NOTELEPORT
	+DONTSPLASH
	States
	{
	Spawn:
		TNT1 A 0
		Stop
	}
}

ACTOR KWDMBlood : FXBase Replaces Blood
{
	scale 0.7
	+FORCEXYBILLBOARD
	States
	{
	Spawn:
		TNT1 AAA 0 A_SpawnItemEX("KWDMBloodDroplet", 0, 0, 0, random(-6, 6), 0, random(0, 6), random(0,360))
		Stop
	}
}

