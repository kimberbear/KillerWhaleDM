ACTOR FXBase : Actor 
{
	+NOINTERACTION
	+NOBLOCKMAP
	+NOGRAVITY
	+NOTONAUTOMAP
	+CLIENTSIDEONLY
	+NONETID
	+THRUACTORS
	+NOTELEPORT
	+DONTSPLASH
	States
	{
	Spawn:
		TNT1 A 0
		Stop
	}
}

ACTOR CWDM_bulletPuff : FXBase
{

	RenderStyle "Normal"
	Alpha 0.8
	xScale 0.25
	yScale 0.25
	-NOINTERACTION
	+FORCEXYBILLBOARD
	+SKYEXPLODE
	+ALWAYSPUFF
	+PUFFONACTORS
	+HITTRACER
	Decal "BLDCL"
	States
	{
	Spawn:
		//TNT1 A 0 NODELAY A_SetRoll(random(0,360))
		TNT1 A 0 A_JumpIfInventory("QuadDamage", 0, "Crit", AAPTR_TARGET)
		BLPF ABCDE 2 Bright 
		goto death
		//TNT1 A 0
		//goto tracer
	tracer:
		TNT1 A 0 A_SpawnItemEX("CWDM_Tracer", 0, 0, 0, 0, 0, 0, 0, SXF_SETMASTER|SXF_TRANSFERPOINTERS)
		stop
	Death:
		TNT1 A 1
		stop
	}
}

